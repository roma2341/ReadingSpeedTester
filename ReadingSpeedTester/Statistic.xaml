<Window x:Class="ReadingSpeedTester.Statistic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        xmlns:local="clr-namespace:ReadingSpeedTester"
        mc:Ignorable="d"
        Title="Statistic" Height="300" Width="300" Closing="Window_Closing">
    <Grid>
        <DockPanel>
            <d3:ChartPlotter x:Name="ChartPlotterStatistic">
                <d3:LineGraph x:Name="LinegraphStatistic"  Stroke="Blue" StrokeThickness="3"/>
                <d3:VerticalAxisTitle>Значення</d3:VerticalAxisTitle>
                <d3:HorizontalAxisTitle >Час, с</d3:HorizontalAxisTitle>
            </d3:ChartPlotter>
        </DockPanel>

    </Grid>
</Window>
